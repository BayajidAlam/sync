# Server Configuration
PORT=5000
NODE_ENV=development

# AWS Configuration
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# S3 Configuration - COST OPTIMIZED
S3_BUCKET_RAW=raw-videos-bucket
S3_BUCKET_PROCESSED=processed-videos-bucket

# COST OPTIMIZATION: S3 Lifecycle Settings
S3_LIFECYCLE_ENABLED=true
S3_INTELLIGENT_TIERING=true
S3_RAW_VIDEO_RETENTION_DAYS=30
S3_GLACIER_TRANSITION_DAYS=90
S3_DEEP_ARCHIVE_TRANSITION_DAYS=365

# SQS Configuration
SQS_QUEUE_URL=https://sqs.ap-southeast-1.amazonaws.com/your-account/video-processing-queue

# MongoDB Configuration - COST OPTIMIZED
MONGODB_URI=mongodb://localhost:27017/vision_sync
# For MongoDB Atlas M10 (cost optimized): mongodb+srv://username:password@cluster.mongodb.net/vision_sync

# COST OPTIMIZATION: MongoDB Settings
MONGODB_CONNECTION_POOL_SIZE=5
MONGODB_MAX_IDLE_TIME=30000
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# CloudFront Configuration - COST OPTIMIZED
CLOUDFRONT_DISTRIBUTION_ID=your-distribution-id
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# COST OPTIMIZATION: CloudFront Settings
CLOUDFRONT_PRICE_CLASS=PriceClass_100
CLOUDFRONT_DEFAULT_TTL=86400
CLOUDFRONT_MAX_TTL=31536000
CLOUDFRONT_COMPRESSION_ENABLED=true

# ECS Configuration - COST OPTIMIZED
ECS_CLUSTER_NAME=vision-sync-processing-dev
ECS_TASK_DEFINITION=vision-sync-video-processing-dev

# COST OPTIMIZATION: ECS Settings
ECS_USE_FARGATE_SPOT=true
ECS_SPOT_PERCENTAGE=70
ECS_TASK_CPU=1024
ECS_TASK_MEMORY=2048
ECS_MAX_PROCESSING_TIME=3600

# Video Processing - COST OPTIMIZED
FFMPEG_PRESET=fast
FFMPEG_THREADS=2
PROCESSING_PRIORITY=normal
ENABLE_BATCH_PROCESSING=true

# Rate Limiting (In-Memory) - NO REDIS COST
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
UPLOAD_RATE_LIMIT_MAX=5
RATE_LIMIT_STORE=memory

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Monitoring - COST OPTIMIZED
LOG_LEVEL=warn
LOG_RETENTION_DAYS=7
METRICS_ENABLED=false
DETAILED_MONITORING=false

# COST OPTIMIZATION: Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DETAILED_LOGGING=false
ENABLE_PERFORMANCE_MONITORING=false
ENABLE_COST_TRACKING=true